<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lay1_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1255DB"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="16dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/img_map"
            circleimageview:civ_border_color="#ffffff"
            circleimageview:civ_border_overlay="false"
            circleimageview:civ_border_width="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="地图"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/position_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:background="#ffffff"
            android:alpha="10"
            />
        <com.baidu.mapapi.map.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/baidu_mapview"
            android:clickable="true"/>
    </FrameLayout>
</LinearLayout>